@model Netzalist.LeadManager.Web.Models.ViewModels.Leads.CompanyViewModel

@Html.DisplayFor(model=>model)

@if (Model != null)
{
    @Html.ActionLink("Neuer Kontakt", "AddContact", new {companyId = Model.CompanyId})

    if (Model.ContactToEdit == null)
    {
        Html.RenderPartial("~/Views/Company/_PersonList.cshtml", Model.Contacts);
    }
    else
    {
        Html.RenderPartial("~/Views/Company/_EditPerson.cshtml", Model.ContactToEdit);
        @Html.ActionLink("Kontakt speichern", "SaveContact", new {companyId=Model.CompanyId})
    }
}
