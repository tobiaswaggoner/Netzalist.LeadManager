@model Netzalist.LeadManager.Web.Models.ViewModels.Leads.CompanyViewModel

@Html.HiddenFor(model => model.CompanyId)

<div class="delme" style="margin:0">
    <div id="display">
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
                <td>

                </td>

            </tr>  
            <tr>
                <td>
                    @Html.LabelFor(model => model.Street)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Street, new {style="width:235px;"}) @Html.DisplayFor(model => model.HouseNumber, new {style="width:48px;"})
                </td>
                <td>

                </td>
            </tr>   
            <tr>
                <td>
                    @Html.LabelFor(model => model.City)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ZipCode, new {style="width:48px;"}) @Html.DisplayFor(model => model.City, new {style="width:235px;"})
                </td>
                <td>
                </td>
            </tr>  
            <tr>
                <td>
                    @Html.LabelFor(model => model.CountryCode)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Region, new {style="width:140px;"}) @Html.DisplayFor(model => model.CountryCode, new {style="width:143px;"})
                </td>
                <td>
                </td>
            </tr>  
            <tr>
                <td>
                    @Html.LabelFor(model => model.Phone)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Phone)
                </td>
                <td>
                </td>
            </tr> 
            <tr>
                <td>
                    @Html.LabelFor(model => model.Fax)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Fax)
                </td>
                <td>
                </td>
            </tr>   
            <tr>
                <td>
                    @Html.LabelFor(model => model.Website)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Website)
                </td>
                <td>

                </td>
            </tr>      
            <tr>
                <td>
                    @Html.LabelFor(model => model.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
                <td>
                </td>
            </tr> 

        </table>
    </div>
    <div id="edit" style="visibility:collapse; margin:0">
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Name)
                </td>
                <td>
                    @Html.EditorFor(model => model.Name)
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Name)
                </td>

            </tr>  
            <tr>
                <td>
                    @Html.LabelFor(model => model.Street)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Street, new {style="width:235px;"}) @Html.TextBoxFor(model => model.HouseNumber, new {style="width:48px;"})
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Street)
                    @Html.ValidationMessageFor(model => model.HouseNumber)
                </td>
            </tr>   
            <tr>
                <td>
                    @Html.LabelFor(model => model.City)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ZipCode, new {style="width:48px;"}) @Html.TextBoxFor(model => model.City, new {style="width:235px;"})
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.ZipCode)
                    @Html.ValidationMessageFor(model => model.City)
                </td>
            </tr>  
            <tr>
                <td>
                    @Html.LabelFor(model => model.CountryCode)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Region, new {style="width:140px;"}) @Html.TextBoxFor(model => model.CountryCode, new {style="width:143px;"})
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Region)
                    @Html.ValidationMessageFor(model => model.CountryCode)
                </td>
            </tr>  
            <tr>
                <td>
                    @Html.LabelFor(model => model.Phone)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Phone)
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Phone)
                </td>
            </tr> 
            <tr>
                <td>
                    @Html.LabelFor(model => model.Fax)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Fax)
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Fax)
                </td>
            </tr>   
            <tr>
                <td>
                    @Html.LabelFor(model => model.Website)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Website)
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Website)
                </td>
            </tr>      
            <tr>
                <td>
                    @Html.LabelFor(model => model.Email)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Email)
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Email)
                </td>
            </tr> 

        </table>

    </div>
</div>
